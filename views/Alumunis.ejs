<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alumni Profiles</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="../stylesheets/styleHome.css">
    <!-- <link rel="stylesheet" href="../stylesheets/styleAlumuni.css"> -->
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 20px;
            height: 100vh;
            background-color: #f4f4f9;
        }

        .button-container {
            display: flex;
            gap: 20px;
            margin-top: 500px;

        }

        .profile-container {
            display: none;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
        }

        .button {
            padding: 10px 20px;
            height: 80px;
            width: 120px;
            border: 1px solid rgba(13, 13, 13, 0.5);
            background-color: beige;
            box-shadow: 10px 12px 13px;
            color: rgb(152, 138, 138);
            font-weight: 700;
            /* border: none; */
            border-radius: 15px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .button:hover {
            /* background-color: #92beee; */
            background-color: rgba(177, 225, 237, 0.5);
            border: 1px solid rgba(32, 32, 31, 0.5);
        }

        .profile-box {
            width: fit-content;
            height: fit-content;
            text-align: start;
            padding: 10px;
            border: 1px solid #0e0d0d;
            border-radius: 15px;
            background-color: #fdfdfd;
            text-align: center;
            box-shadow: 10px 12px 14px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in;
            transform: translateX(-0%);
            animation: moveBox1 30s 5 alternate;
        }

        .profile-box:nth-child(1) {
            animation: moveBox1 2s 2 alternate
                /*ease-in-out*/
            ;
        }

        .profile-box:nth-child(2) {
            animation: moveBox2 2s 2 alternate
                /*ease-in-out*/
            ;
        }

        .profile-box:nth-child(3) {
            animation: moveBox3 2s 2 alternate
                /*ease-in-out*/
            ;
        }

        .profile-box:nth-child(4) {
            animation: moveBox4 2s 2 alternate
                /*ease-in-out*/
            ;
        }

        @keyframes moveBox1 {
            0% {
                transform: translateX(0);
            }

            100% {
                transform: translateX(50px);
            }
        }

        @keyframes moveBox2 {
            0% {
                transform: translateY(0);
            }

            100% {
                transform: translateY(30px);
            }
        }

        @keyframes moveBox3 {
            0% {
                transform: translateX(0) translateY(0);
            }

            100% {
                transform: translateX(20px) translateY(30px);
            }
        }

        @keyframes moveBox4 {
            0% {
                transform: translateX(0) translateY(0);
            }

            100% {
                transform: translateX(-20px) translateY(-10px);
            }
        }

        .profile-box img {
            width: 70px;
            height: 70px;
            border-radius: 10%;
            margin-bottom: 10px;
        }

        .profile-box p {
            font-size: 1rem;
            font-family: 'Times New Roman', Times, serif;
            color: rgb(134, 134, 114);
        }

        .btn {

            background-color: rgb(181, 220, 220);
            border: 1px solid rgb(125, 205, 237);
            border-radius: 5px;
        }

        .btn:hover {
            background-color: rgb(129, 110, 233);
            border-radius: 10px;
            border: 0.5px solid rgb(186, 186, 222);
        }
    </style>
</head>

<body>
    <%- include('partials/navbar') %>
        <!-- <div class="w-full h-full bg-zinc-900 text-white p-10"> -->
        <div class="button-container">
            <form method="get" action="/alumuni">
                <button class="button" type="submit" name="tech" value="Python">Python</button>
                <button class="button" type="submit" name="tech" value="JavaScript">JavaScript</button>
                <button class="button" type="submit" name="tech" value="C++">C++</button>
                <button class="button" type="submit" name="tech" value="React">React</button>
                <button class="button" type="submit" name="tech" value="Blockchain">Blockchain</button>
                <button class="button" type="submit" name="tech" value="Cloud Computing">Cloud Computing</button>
                <button class="button" type="submit" name="tech" value="AI/ML">AI/ML</button>
                <button class="button" type="submit" name="tech" value="MERN">MERN</button>
                <button class="button" type="submit" name="tech" value="Frontend">Frontend</button>
                <button class="button" type="submit" name="tech" value="Backend">Backend</button>
            </form>
        </div>


        <!-- Alumni profiles -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
            <% if (alumni.length> 0) { %>
                <% alumni.forEach(alum=> { %>
                    <div class="profile-box">
                        <!-- <img class="w-20 h-20 rounded-full mx-auto" src="/images/alumunis/default.jpg" alt="<%= alum.name %>"> -->
                        <h3 class="text-xl text-center mt-2">
                            <%= alum.name %>
                        </h3>
                        <p class="text-center text-gray-400">
                            <%= alum.tech %>
                        </p>
                        <p class="text-center text-gray-400">
                            <%= alum.company %>
                        </p>

                        <form action="/connect" method="POST">
                            <input type="hidden" name="alumId" value="<%= alum._id %>">
                            <button type="submit" class="mt-4 w-full px-3 py-2 bg-blue-600 text-white rounded-md">
                                Connect
                            </button>
                        </form>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p class="text-center col-span-full text-gray-500">No alumni found for the selected
                                technology.</p>
                            <% } %>

                                <a style="background-color: black; color: white; padding: 10px 20px; border-radius: 5px; text-decoration:none;"
                                    href="/chatPage">Chat with Alumunies</a>
        </div>
        <!-- </div> -->
        <script src="../javascripts/alumunisScript.js"></script>
</body>

</html>